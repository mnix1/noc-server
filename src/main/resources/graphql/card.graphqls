enum CardType {
    CHARACTER
    ANIMAL
    PLANT
    CONSTRUCTION
    SPELL
}

enum CardRarity {
    COMMON
    RARE
    EPIC
    LEGENDARY
    FORGOTTEN
}

type Card {
    name: String!
    cost: Int!
    type: CardType!
    rarity: CardRarity!
}

type Query {
    findAllCards: [Card]!
    findCard(name: String!): Card!
}

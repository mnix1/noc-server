enum Type {
    CHARACTER
    ANIMAL
    PLANT
    CONSTRUCTION
    SPELL
}

enum Rarity {
    COMMON
    RARE
    EPIC
    LEGENDARY
    FORGOTTEN
}

enum Statistic {
    ELIXIR_MAX
    ELIXIR_REGENERATION
    HEALTH_MAX
    HEALTH_REGENERATION
    ABILITY_MAX
    ABILITY_REGENERATION
    MANA_MAX
    MANA_REGENERATION
}

type Card {
    id: ID!
    name: String!
    type: Type!
    rarity: Rarity!
    statistics: [CardStatistic!]!
}
